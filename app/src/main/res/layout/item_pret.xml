<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">



    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:progressBackgroundTint="#11FFFFFF"
        android:layout_toRightOf="@id/img_itmpret"
        android:max="100"
        android:min="0" />
    <ImageView
        android:id="@+id/img_itmpret"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_compte"/>
    <RelativeLayout
        android:id="@+id/vertical"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/img_itmpret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" >
            <TextView
                android:id="@+id/itm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="12pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itm_name"
                android:text="date" />
        </RelativeLayout>

            <TextView
                android:id="@+id/itm_montant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14pt"
                android:layout_alignParentRight="true"
                android:layout_margin="5pt"
                android:textStyle="bold"
                android:text="montant"

                />

</RelativeLayout>
